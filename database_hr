-- Stores transaction categories to enable detailed reporting
CREATE TABLE categories (
    category_id VARCHAR(255) PRIMARY KEY,
    category_name VARCHAR(100) NOT NULL UNIQUE,
    category_type VARCHAR(20) NOT NULL CHECK (category_type IN ('Revenue', 'Expense')) -- Defines if it's income or an expense
);
-- Stores information about clients, vendors, or employees
CREATE TABLE payees (
    payee_id VARCHAR(255) PRIMARY KEY,
    payee_name VARCHAR(255) NOT NULL UNIQUE,
    contact_info TEXT -- e.g., email, phone number, address
);
-- The central table that records every financial event, linking all other tables
CREATE TABLE transactions (
    transaction_id VARCHAR(255) PRIMARY KEY,
    transaction_date DATE NOT NULL,
    description TEXT,
    amount DECIMAL(10, 2) NOT NULL,

    -- Foreign Keys to link to the other tables
    account_id VARCHAR(255) REFERENCES accounts(account_id),
    category_id VARCHAR(255) REFERENCES categories(category_id),
    payee_id VARCHAR(255) REFERENCES payees(payee_id)
);
-- Stores the different financial accounts (e.g., Checking, Savings, Credit Card)
CREATE TABLE accounts (
    account_id VARCHAR(255) PRIMARY KEY,
    account_name VARCHAR(100) NOT NULL UNIQUE,
    account_type VARCHAR(50), -- e.g., 'Bank Account', 'Credit Card', 'Cash'
    initial_balance DECIMAL(12, 2) DEFAULT 0.00
);
